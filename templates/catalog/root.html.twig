{% extends 'base.html.twig' %}

{% block content %}
    <div class="container-fluid my-4">
        <div class="row">
            <div class="col-lg-3 d-none d-lg-block">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        Каталог продукции
                    </div>
                    {{ include('menu-catalog.html.twig') }}
                </div>
                {{ include('_block/subscription.html.twig') }}
            </div>

            <!-- Контент справа -->
            <div class="col-lg-9">
                <h1>{{ main.title }}</h1>
                <div class="row g-3">

                {% for item in menu %}
                    <div class="col-6 col-sm-6 col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0 me-3" style="min-width: 80px; min-height: 80px;">
                                <a href="{{ item.fullPath }}">
                                    <img src="/images/1/{{ item.imageXs }}" alt="{{ item.label }}" class="img-fluid" style="max-height: 60px; max-width: 60px;">
                                </a>
                            </div>
                            <div class="flex-grow-1">
                                <a href="{{ item.fullPath }}" class="text-decoration-none text-dark fw-bold d-block mb-1">
                                    {{ item.label }}
                                    {% if item.id in categoryCounter|keys and categoryCounter[item.id] is not empty %}
                                        ({{ categoryCounter[item.id] }})
                                    {% endif %}

                                </a>
                                {% if item.children %}
                                    <ul class="list-unstyled mb-0 small">
                                        {% for subitem in item.children %}
                                            <li><a href="{{ subitem.fullPath }}" class="text-decoration-none text-muted dark_link"
                                                >{{ subitem.label }}</a> {% if subitem.id in categoryCounter|keys and categoryCounter[subitem.id] is not empty %}({{ categoryCounter[subitem.id] }}){% endif %}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
