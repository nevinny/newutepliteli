{% extends 'base.html.twig' %}

{% block title %}Вход в систему{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">

                        <h1 class="h3 mb-4 text-center">Вход в систему</h1>

                        {% if error %}
                            <div class="alert alert-danger alert-dismissible fade show">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info mb-3">
                                Вы вошли как {{ app.user.userIdentifier }},
                                <a href="{{ path('app_logout') }}" class="alert-link">Выйти</a>
                            </div>
                        {% endif %}

                        <form method="post" class="needs-validation" novalidate>
                            <input type="hidden" name="_target_path" value="{{ app.request.query.get('redirect_to', '/personal') }}">
                            <div class="mb-3">
                                <label for="username" class="form-label">Email</label>
                                <input type="email"
                                       value="{{ last_username }}"
                                       name="_username"
                                       id="username"
                                       class="form-control"
                                       autocomplete="email"
                                       required
                                       autofocus>
                                <div class="invalid-feedback">Пожалуйста, введите email</div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Пароль</label>
                                <input type="password"
                                       name="_password"
                                       id="password"
                                       class="form-control"
                                       autocomplete="current-password"
                                       required>
                                <div class="invalid-feedback">Пожалуйста, введите пароль</div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="mb-3 form-check">
                                <input type="checkbox"
                                       class="form-check-input"
                                       name="_remember_me"
                                       id="_remember_me">
                                <label class="form-check-label" for="_remember_me">Запомнить меня</label>
                            </div>

                            <button class="btn btn-danger btn-register w-100 py-2 mb-3" type="submit">
                                Войти
                            </button>

                            <div class="text-center">
                                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Забыли пароль?</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-3">
                    Нет аккаунта? <a href="{{ path('app_register') }}" class="text-decoration-none">Зарегистрируйтесь</a>

        </div>
    </div>
{% endblock %}
