{% extends 'base.html.twig' %}

{% block title %}–ö–æ—Ä–∑–∏–Ω–∞ - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –∏–∑ Twig
            const quantities = {};
            const prices = {};
            {% for item in cartItems %}
            quantities['{{ item.id }}'] = {{ items[item.id] }};
            prices['{{ item.id }}'] = {{ item.price }};


            {% endfor %}

            /**
             * –û–±–Ω–æ–≤–∏—Ç—å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ
             */
            window.updateQuantity = function (id, change) {
                const newQty = Math.max(1, (quantities[id] ?? 1) + change);
                quantities[id] = newQty;
                document.getElementById('quantity_' + id).textContent = newQty;
                document.getElementById('price_' + id).textContent = (newQty * prices[id]).toLocaleString() + ' ‚ÇΩ';

                fetch('/cart/update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify({id: id, quantity: newQty})
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            updateTotals(data);
                        } else {
                            showToast('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞');
                        }
                    })
                    .catch(() => showToast('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞'));
            };

            /**
             * –£–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
             */
            window.removeItem = function (id) {
                if (!confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã?')) return;

                fetch('/cart/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify({id})
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            document.getElementById('cart-item-' + id).remove();
                            updateTotals(data);

                            if (data.cartCount === 0) {
                                document.getElementById('cart-content').innerHTML = `
                                    <div class="text-center py-5">
                                        <i class="bi bi-cart-x fs-1 text-muted mb-3"></i>
                                        <h3 class="mb-2">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</h3>
                                        <p class="text-muted mb-4">–î–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –∫–∞—Ç–∞–ª–æ–≥–∞</p>
                                        <a href="{{ path('page_show', {'slug' : 'catalog'}) }}" class="btn btn-danger">–ü–µ—Ä–µ–π—Ç–∏ –≤ –∫–∞—Ç–∞–ª–æ–≥</a>
                                    </div>`;
                            }
                        } else {
                            showToast('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞');
                        }
                    })
                    .catch(() => showToast('–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞'));
            };

            /**
             * –û–±–Ω–æ–≤–∏—Ç—å –±–ª–æ–∫ –∏—Ç–æ–≥–æ–≤
             */
            // function updateTotals(data) {
            //     document.getElementById('total-sum').textContent = data.totalPrice.toLocaleString() + ' ‚ÇΩ';
            //     document.getElementById('total-items').textContent = data.totalCount;
            // }

            function updateTotals(data) {
                document.getElementById('total-sum').textContent = data.totalPrice.toLocaleString() + ' ‚ÇΩ';
                document.getElementById('total-items').textContent = data.totalCount;

                // –¢–∞–∫–∂–µ –æ–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ –ø–æ–∑–∏—Ü–∏–π –≤ –∑–∞–≥–æ–ª–æ–≤–∫–µ
                const totalItemsElements = document.querySelectorAll('#total-items');
                totalItemsElements.forEach(element => {
                    if (element.id === 'total-items') {
                        element.textContent = data.totalCount;
                    }
                });
            }

            /**
             * –ü–æ–∫–∞–∑ —Ç–æ—Å—Ç–∞
             */
            window.showToast = function (message, delay = 3000) {
                const toastElement = document.getElementById('cartToast');
                const toastMessage = document.getElementById('toastMessage');
                toastMessage.textContent = message;

                const toast = new bootstrap.Toast(toastElement, {
                    delay: delay,
                    autohide: true
                });
                toast.show();
            };
        });
    </script>
{% endblock %}

{% block content %}
    <div class="container-flex py-5" id="cart-content">
        <div class="bg-white rounded p-4">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-cart-fill text-danger fs-3 me-2"></i>
                <h1 class="h3 mb-0 me-2">–ö–æ—Ä–∑–∏–Ω–∞</h1>
                <span class="text-muted">(<span id="total-items-title">{{ cartItems|length }}</span> —Ç–æ–≤–∞—Ä–æ–≤)</span>
            </div>

            {% if cartItems|length > 0 %}
                <div class="row g-4">
                    <!-- Cart items -->
                    <div class="col-lg-8">
                        {% for item in cartItems %}
                            {% set product = item.getProduct() %}
                            <div class="card mb-3" id="cart-item-{{ item.id }}">
                                <div class="card-body d-flex gap-3">
                                    <div class="flex-shrink-0" style="width: 80px; height: 80px;">
                                        {% if product.image %}
                                            <img src="{{ product.image }}" alt="{{ product.title }}"
                                                 class="img-fluid rounded"
                                                 style="object-fit: cover; width: 100%; height: 100%;">
                                        {% endif %}
                                    </div>

                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1">{{ product.title }}</h5>
                                        <div class="mb-2">
                                            <small class="text-muted">–¶–µ–Ω–∞ –∑–∞
                                                —à—Ç.: {{ item.price|number_format(0, '.', ' ') }} ‚ÇΩ</small>
                                        </div>

                                        {% if item.params %}
                                            <ul class="list-unstyled mb-2 small text-muted">
                                                {% for param in item.params %}
                                                    <li>{{ param.title }}: {{ param.val }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}

                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateQuantity({{ item.id }}, -1)">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                <span class="px-2"
                                                      id="quantity_{{ item.id }}">{{ items[item.id] }}</span>
                                                <button class="btn btn-outline-secondary btn-sm"
                                                        onclick="updateQuantity({{ item.id }}, 1)">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>

                                            <div class="d-flex align-items-center gap-2">
                                                <strong
                                                    id="price_{{ item.id }}">{{ (item.price * items[item.id])|number_format(0, '.', ' ') }}
                                                    ‚ÇΩ</strong>
                                                <button class="btn btn-outline-danger btn-sm"
                                                        onclick="removeItem({{ item.id }})">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Order summary -->
                    <div class="col-lg-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">–ò—Ç–æ–≥–æ –ø–æ –∑–∞–∫–∞–∑—É</h5>
                                <ul class="list-unstyled mb-3">
                                    <li class="d-flex justify-content-between">
                                        <span>–ü–æ–∑–∏—Ü–∏–π</span>
                                        <span id="total-items">{{ cartItems|length }}</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <span>–¢–æ–≤–∞—Ä–æ–≤</span>
                                        <span
                                            id="total-items-count">{{ cartItems|reduce((sum, item) => sum + items[item.id], 0) }}</span>
                                    </li>
                                    <hr>
                                    <li class="d-flex justify-content-between fw-bold fs-5">
                                        <span>–û–±—â–∞—è —Å—É–º–º–∞</span>
                                        <span id="total-sum">
                                            {{ cartItems|reduce((sum, i) => sum + (i.price * items[i.id]), 0)|number_format(0, '.', ' ') }} ‚ÇΩ
                                        </span>
                                    </li>
                                </ul>

                                <a href="{{ path('cart_checkout') }}" class="btn btn-danger w-100 mb-2">–û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑</a>
                                <a href="{{ path('catalog') }}" class="btn btn-outline-secondary w-100">–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å –ø–æ–∫—É–ø–∫–∏</a>

                                <div class="text-muted mt-3 small">
                                    <p>üîí –ë–µ–∑–æ–ø–∞—Å–Ω–∞—è –æ–ø–ª–∞—Ç–∞</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-cart-x fs-1 text-muted mb-3"></i>
                    <h3 class="mb-2">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</h3>
                    <p class="text-muted mb-4">–î–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –∫–∞—Ç–∞–ª–æ–≥–∞</p>
                    <a href="{{ path('page_show', {'slug' : 'catalog'}) }}" class="btn btn-danger">–ü–µ—Ä–µ–π—Ç–∏ –≤ –∫–∞—Ç–∞–ª–æ–≥</a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="cartToast" class="toast align-items-center text-white bg-dark border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage">–¢–æ–≤–∞—Ä –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
{% endblock %}
