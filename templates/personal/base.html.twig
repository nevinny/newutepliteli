{% extends 'base.html.twig' %}

{% block title %}Личный кабинет - {{ parent() }}{% endblock %}

{% block content %}
    <div class="p-6">
        <div class="max-w-7xl mx-auto">
            <!-- Breadcrumbs -->
            <nav class="flex items-center gap-2 text-sm text-gray-600 mb-6">
                <a href="{{ path('index') }}" class="hover:text-gray-900 transition-colors">Главная</a>
                <span>/</span>
                <span class="text-gray-900">Личный кабинет</span>
            </nav>

            <div class="bg-white rounded-lg border border-gray-200 mb-6">
                <div class="p-6 border-b border-gray-200">
                    <h1 class="text-3xl font-bold text-gray-900">Личный кабинет</h1>
                </div>

                <div class="flex">
                    <!-- Sidebar -->
                    <div class="w-64 border-r border-gray-200 p-6">
                        <nav class="space-y-2">
                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_dashboard' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                <span class="text-sm">Мой кабинет</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_orders' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                                </svg>
                                <span class="text-sm">Текущие заказы</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_balance' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                                </svg>
                                <span class="text-sm">Личный счет</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_profile' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <span class="text-sm">Личные данные</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_password' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                                <span class="text-sm">Сменить пароль</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_order_history' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-sm">История заказов</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_order_profiles' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                                <span class="text-sm">Профили заказов</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors text-gray-600 hover:bg-gray-50 hover:text-gray-900">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0L14 13"/>
                                </svg>
                                <span class="text-sm">Корзина</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors {% if app.request.get('_route') == 'app_account_subscriptions' %}bg-red-50 text-red-700 border border-red-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM20.83 14.83a4.5 4.5 0 00-.74-7.44L15 8.09V2h-2v6.09l-5.09.74a4.5 4.5 0 00-.74 7.44L2 17l1.41 1.41L8.59 13 13 17.41l4.59-4.59L20 14.83z"/>
                                </svg>
                                <span class="text-sm">Подписки</span>
                            </a>

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors text-gray-600 hover:bg-gray-50 hover:text-gray-900">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                                <span class="text-sm">Контакты</span>
                            </a>

                            <hr class="my-4 border-gray-200">

                            <a href="#"
                               class="w-full flex items-center gap-3 px-3 py-2 text-left rounded-lg transition-colors text-red-600 hover:bg-red-50">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                </svg>
                                <span class="text-sm">Выйти</span>
                            </a>
                        </nav>
                    </div>

                    <!-- Main Content -->
                    <div class="flex-1 p-6">
                        {% block account_content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
