{% extends 'personal/base.html.twig' %}

{% block title %}Личные данные - {{ parent() }}{% endblock %}

{% block account_content %}
    <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Личные данные</h2>

        <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.firstName, 'Имя', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div>
                        {{ form_label(form.lastName, 'Фамилия', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div>
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div>
                        {{ form_label(form.phone, 'Телефон', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>
                </div>

                <div>
                    {{ form_label(form.address, 'Адрес доставки', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.address, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent', 'rows': 3}}) }}
                    {{ form_errors(form.address) }}
                </div>

                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg transition-colors font-medium">
                    Сохранить изменения
                </button>
                {{ form_end(form) }}
            </div>
        </div>

        {% if app.flashes('success') %}
            <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
                {% for message in app.flashes('success') %}
                    <p class="text-green-800">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.flashes('error') %}
            <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
                {% for message in app.flashes('error') %}
                    <p class="text-red-800">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
