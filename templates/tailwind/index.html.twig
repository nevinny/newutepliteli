{% extends '../base.html.twig' %}

{% set show_sidebar = true %}

{% block title %}Главная - {{ parent() }}{% endblock %}

{% block body %}
    <div class="p-6">
        <div class="max-w-7xl mx-auto space-y-8">
            <!-- Hero Section -->
            <section class="bg-gradient-to-r from-orange-200 to-orange-300 rounded-lg overflow-hidden mb-8">
                <div class="flex items-center min-h-[300px]">
                    <div class="flex-1 p-8">
                        <h1 class="text-3xl font-bold text-gray-900 mb-4">
                            Техническая и строительная изоляция
                        </h1>
                        <p class="text-lg text-gray-700 mb-6">
                            Официальный дистрибьютор ведущих производителей
                        </p>
                        <a href="{{ path('catalog') }}" class="inline-flex items-center px-8 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors font-medium">
                            Узнать подробнее
                        </a>
                    </div>
                    <div class="flex-1 relative h-[300px]">
                        <img src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=600&h=300&fit=crop&crop=center"
                             alt="Строительная изоляция"
                             class="w-full h-full object-cover">
                    </div>
                </div>
            </section>

            <!-- Popular Categories -->
            <section class="mb-12">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-bold text-gray-900">Популярные категории</h2>
                    <a href="{{ path('catalog') }}" class="inline-flex items-center px-4 py-2 border border-red-600 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                        Весь каталог
                    </a>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
                    {% for category in popularCategories %}
                        <div class="bg-white rounded-lg border border-gray-200 shadow-sm group cursor-pointer hover:shadow-md transition-all duration-200">
                            <div class="p-4 text-center">
                                <div class="w-12 h-12 mx-auto mb-3 rounded-lg {{ category.color }} flex items-center justify-center text-2xl">
                                    {{ category.icon }}
                                </div>
                                <h3 class="font-medium text-sm text-gray-900 mb-1">{{ category.name }}</h3>
                                {% if category.description %}
                                    <p class="text-xs text-gray-500 leading-tight">{{ category.description }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <!-- Featured Products -->
            <section class="mb-12">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Рекомендуемые товары</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {% for product in featuredProducts %}
                        <div class="bg-white rounded-lg border border-gray-200 shadow-sm group cursor-pointer hover:shadow-lg transition-all duration-200">
                            <div class="p-4">
                                <div class="aspect-square mb-4 bg-gray-50 rounded-lg overflow-hidden">
                                    <img src="{{ product.image }}"
                                         alt="{{ product.name }}"
                                         class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-200">
                                </div>

                                <h3 class="font-medium text-sm text-gray-900 mb-2 line-clamp-2 min-h-[40px]">
                                    {{ product.name }}
                                </h3>

                                <div class="flex items-center gap-1 mb-2">
                                    {% for i in 1..5 %}
                                        <svg class="w-3 h-3 {{ i <= product.rating ? 'fill-yellow-400 text-yellow-400' : 'text-gray-300' }}" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                        </svg>
                                    {% endfor %}
                                </div>

                                <div class="mb-3">
                                    {% if product.inStock %}
                                        <span class="text-xs text-green-600">В наличии</span>
                                    {% else %}
                                        <span class="text-xs text-gray-500">Нет в наличии</span>
                                    {% endif %}
                                </div>

                                <div class="flex flex-col gap-2">
                                    <div class="flex items-center gap-2">
                                        <span class="font-semibold text-gray-900">{{ product.price }}</span>
                                        {% if product.oldPrice %}
                                            <span class="text-xs text-gray-500 line-through">{{ product.oldPrice }}</span>
                                        {% endif %}
                                    </div>

                                    <button class="w-full px-3 py-2 border border-red-600 text-red-600 hover:bg-red-50 rounded-lg transition-colors text-sm">
                                        В корзину
                                    </button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <!-- Service Highlights -->
            <section class="bg-white rounded-lg border border-gray-200 p-8 mb-12">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {% for highlight in serviceHighlights %}
                        <div class="text-center">
                            <div class="w-16 h-16 mx-auto mb-4 bg-red-50 rounded-full flex items-center justify-center">
                                {% if highlight.icon == 'truck' %}
                                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                {% elseif highlight.icon == 'shield' %}
                                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                    </svg>
                                {% elseif highlight.icon == 'clock' %}
                                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                {% elseif highlight.icon == 'award' %}
                                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            <h3 class="font-semibold text-gray-900 mb-2">{{ highlight.title }}</h3>
                            <p class="text-sm text-gray-600">{{ highlight.description }}</p>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>
{% endblock %}
