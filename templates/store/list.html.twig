{% extends 'base.html.twig' %}

{% block content %}
    {% set coodinates = '1cbe5df41a81ba283d0b4a0128eb1e89de621ce1ef95927373f751ec2c93a302' %}
<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A{{ coodinates }}&amp;width=100%25&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
{#<h1>{{ page.title }}</h1>#}
    <h2>Магазины </h2>
    {% for item in list %}
        <hr>
        <h4>{{ item.title }}</h4>
        <div class="row">
            <div class="col-6"><h6><a href="{{ main.fullPath ~ '/' ~ item.slug}}">{{ item.addr }}</a></h6></div>
            <div class="col-3">{{ item.workHours|raw }}</div>
            <div class="col-3">{{ item.phone|raw }}<br><a href="mailto:{{ item.email }}">{{ item.email }}</a></div>
        </div>
    {% endfor %}


{% endblock %}
