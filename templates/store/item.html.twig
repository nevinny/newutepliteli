{% extends 'base.html.twig' %}

{% block content %}
    <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A{{ page.coordinates }}&amp;width=100%25&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
    <h1>{{ page.title }}</h1>
    <div class="row">
        <div class="col-6"><h3>{{ page.addr }}</h3></div>
        <div class="col-3">{{ page.workHours|raw }}</div>
        <div class="col-3">{{ page.phone|raw }}<br><a href="mailto:{{ page.email }}">{{ page.email }}</a></div>
    </div>

{% endblock %}
