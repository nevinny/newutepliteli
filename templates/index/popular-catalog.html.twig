<div class="card my-4">
    <div class="card-header bg-light fw-bold d-flex justify-content-between align-items-center">
        Популярные категории
        <a href="/catalog/" class="btn btn-sm btn-danger">Весь каталог</a>
    </div>
    <div class="card-body">
        <div class="row g-3">
            {% for item in menu %}
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="d-flex align-items-start">
                        <div class="flex-shrink-0 me-3" style="min-width: 80px; min-height: 80px;">
                            <a href="/catalog/teploizolyatsiya/">
                                <img src="/images/1/{{ item.imageXs }}" alt="{{ item.label }}" class="img-fluid" style="max-height: 60px; max-width: 60px;">
                            </a>
                        </div>
                        <div class="flex-grow-1">
                            <a href="/catalog/teploizolyatsiya/" class="text-decoration-none text-dark fw-bold d-block mb-1">
                                {{ item.label }}
                            </a>
                            {% if item.children %}
                                <ul class="list-unstyled mb-0 small">
                                    {% for subitem in item.children %}
                                        <li><a href="{{ subitem.fullPath }}" class="text-decoration-none text-muted dark_link">{{ subitem.label }}</a></li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>



