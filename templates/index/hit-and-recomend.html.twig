{% set placeholder = 'data:image/svg+xml;charset=UTF-8,' ~
    '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200">' ~
    '<defs>' ~
    '<linearGradient id="bgGrad" x1="0" y1="0" x2="0" y2="1">' ~
    '<stop offset="0%" stop-color="%23f8f9fa"/>' ~
    '<stop offset="100%" stop-color="%23e9ecef"/>' ~
    '</linearGradient>' ~
    '</defs>' ~
    '<rect width="100%" height="100%" fill="url(%23bgGrad)"/>' ~
    '<circle cx="60" cy="60" r="20" fill="%23ced4da"/>' ~
    '<path d="M 20 160 L 80 100 L 130 150 L 180 90 L 200 160 Z" fill="%23dee2e6"/>' ~
    '<path d="M 0 170 L 50 120 L 100 160 L 150 110 L 200 170 Z" fill="%23ced4da" opacity="0.8"/>' ~
    '</svg>'
    | url_encode %}

<div class="mb-4">
    <ul class="nav nav-tabs" id="productTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="hit-tab" data-bs-toggle="tab" data-bs-target="#hit" type="button" role="tab">Хит</button>
        </li>
{#        <li class="nav-item" role="presentation">#}
{#            <button class="nav-link" id="recommend-tab" data-bs-toggle="tab" data-bs-target="#recommend" type="button" role="tab">Советуем</button>#}
{#        </li>#}
    </ul>
    <div class="tab-content pt-3" id="productTabsContent">
        <div class="tab-pane fade show active" id="hit" role="tabpanel">
            <div class="row g-3">
                {% for item in list %}
                <div class="col-md-6 col-lg-4">
                    <div class="bg-light rounded p-2 h-100 d-flex flex-column align-items-center text-center">
                        <a href="{{ item.m_fullPath }}" class="d-block w-100">
                            <div class="image-container" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                {% if item.p_preview|default([])|length > 0 %}

                                    <img class="img-fluid mh-100" style="max-height: 200px; width: auto;"
                                         src="{{ item.p_preview }}" alt="{{ item.p_title }}">
                                {% else %}
                                    <img class="img-fluid mh-100" style="max-height: 200px; width: auto;"
                                         src="{{ placeholder }}" alt="{{ item.p_title }}">
                                {% endif %}
                                {#                                <img class="img-fluid mh-100" style="max-height: 200px; width: auto;" src="/images/popular/aaeedbdfd57031e49948ebfae5156830.png" alt="{{ item.p_title }}"> #}
                            </div>
                            <h6 class="mt-2 mb-1">{{ item.p_title }}</h6>
                        </a>
                        <div class="stars mb-1">
                            <span class="text-warning">★★★★★</span>
                        </div>
                        {#                        <div class="text-muted small mb-1">Нет в наличии</div> #}
                        {#                        <div class="fw-bold">от 570.01 руб.</div> #}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="recommend" role="tabpanel">
            <!-- Рекомендованные товары можно добавить позже аналогично -->
        </div>
    </div>
</div>
